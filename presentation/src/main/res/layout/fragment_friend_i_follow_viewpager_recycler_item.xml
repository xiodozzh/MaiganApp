<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/normal_height"
        android:layout_height="@dimen/normal_height"
        android:src="@drawable/avatar_default_round"
        android:layout_marginStart="@dimen/normal_padding"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="姓名"
        android:textColor="@color/black_text"
        android:textSize="@dimen/subhead_material"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/friend_bp"
        android:textColor="@color/grey_text"
        android:textSize="@dimen/caption_material"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_bp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textColor="@color/black_text"
        android:textSize="@dimen/caption_material"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_bp_title"
        app:layout_constraintStart_toEndOf="@+id/tv_bp_title" />


    <TextView
        android:id="@+id/tv_hr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/friend_hr"
        android:textColor="@color/grey_text"
        android:textSize="@dimen/caption_material"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_bp_title"
        app:layout_constraintStart_toStartOf="@+id/tv_bp_value" />


    <TextView
        android:id="@+id/tv_hr_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="66"
        android:textColor="@color/black_text"
        android:textSize="@dimen/caption_material"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_hr_title"
        app:layout_constraintStart_toEndOf="@+id/tv_hr_title" />

    <TextView
        android:id="@+id/tv_measure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:text="@string/friend_measure_time"
        android:textColor="@color/grey_text"
        android:textSize="@dimen/caption_material"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_bp_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_bp_title" />


    <TextView
        android:id="@+id/tv_measure_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="2018-08-24"
        android:textColor="@color/black_text"
        android:textSize="@dimen/caption_material"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_measure_title"
        app:layout_constraintStart_toEndOf="@+id/tv_measure_title" />


    <com.mgtech.maiganapp.widget.UnreadImageView
        android:id="@+id/iv_message"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="message"
        android:src="@drawable/fragment_friend_indicator_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<androidx.constraintlayout.widget.Group-->
        <!--android:id="@+id/group"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:constraint_referenced_ids="tv_hr_title,tv_measure_value,tv_bp_title,tv_hr_value,tv_measure_title,tv_bp_value,tv_name" />-->

    <TextView
        android:id="@+id/tv_name_only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="姓名"
        android:textColor="@color/black_text"
        android:textSize="@dimen/subhead_material"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>