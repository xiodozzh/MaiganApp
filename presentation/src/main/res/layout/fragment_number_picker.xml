<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_padding"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/picker_digital"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <NumberPicker
            android:id="@+id/picker_float"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="0dp"
            android:layout_height="@dimen/large_height"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_material" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/narrow_padding"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:contentDescription="@string/app_name"
            android:id="@+id/btn_commit"
            android:layout_width="@dimen/narrow_height"
            android:layout_height="@dimen/narrow_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/normal_padding"
            android:background="@drawable/selector_add_white"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/done" />

        <ImageButton
            android:contentDescription="@string/app_name"
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/narrow_height"
            android:layout_height="@dimen/narrow_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/normal_padding"
            android:background="@drawable/selector_add_white"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_white_24dp" />
    </LinearLayout>
</LinearLayout>