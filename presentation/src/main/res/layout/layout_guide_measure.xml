<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mask_color"
    android:elevation="100dp">

    <ImageView
        android:id="@+id/iv_guide_measure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="guide"
        android:src="@drawable/guide_measure_ch"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_skip_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large_padding"
        android:contentDescription="skip"
        android:src="@drawable/guide_i_know_btn"
        app:layout_constraintBottom_toTopOf="@+id/iv_guide_measure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>