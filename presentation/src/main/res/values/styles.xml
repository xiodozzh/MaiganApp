<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/grey1000</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppThemeTotalDark" parent="AppTheme">
        <item name="android:statusBarColor">@color/grey1000</item>
        <item name="android:launchMode">singleTop</item>
        <!--<item name="colorPrimary">@color/white</item>-->
        <!--<item name="colorPrimaryDark">@color/white</item>-->
        <!--<item name="colorAccent">@color/primaryBlue</item>-->
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/logo_splash</item>
    </style>

    <style name="AppThemeBlackAction" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor">@color/grey1000</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="register_edit_text_style">
        <item name="android:textSize">@dimen/body_1_material</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/grey500</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="history_value_style">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/large_material</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="history_title_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/subhead_material</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="history_unit_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/body_1_material</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!--my info activity layout-->
    <style name="info_layout_style">
        <item name="android:paddingStart">@dimen/narrow_padding</item>
        <item name="android:paddingEnd">@dimen/narrow_padding</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normal_height</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--setting fragment layout-->

    <!--setting fragment activity layout-->

    <!--<style name="indicator_detail_item">-->
